<div class="row ">
  <div class="col-lg-12">
    <h1>Usuários</h1>    
  </div>
</div>
<div>
  <%= link_to new_ativo_pge_user_path do %>
    <i class="fa fa-plus btn-sm btn-success" style="color:write"></i>
  <% end %>
</div>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Usuário
      <th>Multiplos Vinculos
      <th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.check_has_many_bond %></td>
        <td style="width: 10px">
          <%= link_to edit_ativo_pge_user_path(user) do %>
            <i class="fa fa-edit"></i>
          <% end %>
        <td style="width: 10px">
          <%= link_to ativo_pge_user_path(user), method: :delete, data: {confirm: "Certeza?"} do %>
            <i class="fa fa-trash" style="color:red"></i>
          <% end %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
