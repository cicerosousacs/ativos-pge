<h1 class="h3 mb-2 text-gray-800">Usuários</h1>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <%= link_to new_ativo_pge_user_path, remote: true, data: { target: '#form_modal', toggle: 'modal' } do %>
      <button class="btn btn-success" type="button">Novo Usuário</button>
    <% end %>
  </div>
  <div class="card-body">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Usuário
          <th>Email
          <th colspan="2" class="text-center">Ações</th>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td width="50%"><%= user.name %></td>
            <td width="50%"><%= user.email %></td>
            <td style="width: 10px">
              <%= link_to edit_ativo_pge_user_path(user), remote: true, data: { target: '#form_modal', toggle: 'modal' } do %>
                <i  title="Editar" class="blue fa fa-edit"></i>
              <% end %>
            <td style="width: 10px">
              <%= link_to ativo_pge_user_path(user), method: :delete, data: {confirm: "Certeza?"} do %>
                <i  title="Excluir" class="red fa fa-trash"></i>
              <% end %>  
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>
