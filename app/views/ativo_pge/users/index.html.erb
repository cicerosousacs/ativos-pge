<h1 class="h3 mb-2 text-gray-800">Usuários</h1>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <%= link_to new_ativo_pge_user_path do %>
      <button class="btn btn-success" type="button">Novo Usuário</button>
    <% end %>
  </div>
  <div class="card-body">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Usuário
          <th>Email
          <th>
          <th>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td style="width: 10px">
              <%= link_to edit_ativo_pge_user_path(user) do %>
                <i class="fa fa-edit"></i>
              <% end %>
            <td style="width: 10px">
              <%= link_to ativo_pge_user_path(user), method: :delete, data: {confirm: "Certeza?"} do %>
                <i class="fa fa-trash" style="color:red"></i>
              <% end %>  
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>
