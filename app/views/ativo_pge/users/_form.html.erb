<% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-success">Novo Usuário</h6>
  </div>
  <div class="card-body">
    <%= form_with(model: [ :ativo_pge, @user ], local: true ) do |form| %>
      <div class="form-group">
        <%= form.label :name %> <br>
        <%= form.text_field :name, class:"form-control border-6 small" %>
      </div>
      <div class="form-group">
        <%= form.label :email %> <br>
        <%= form.text_field :email, class:"form-control border-6 small" %>
      </div>
      <div class="text-right">
        <%= form.submit "Salvar", class:"btn btn-xg btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
