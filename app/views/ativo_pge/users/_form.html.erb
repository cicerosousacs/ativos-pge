<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_with(model: [ :ativo_pge, @user ], local: true ) do |form| %>
  <div class="form-group">
    <%= form.label :name %> <br>
    <%= form.text_field :name, class:"form-control border-6 small" %>
  </div>
  <div class="form-group">
    <%= form.label :email %> <br>
    <%= form.text_field :email, class:"form-control border-6 small" %>
  </div>
  <br>
  <hr>
  <div class="text-right">
    <%= form.submit t('button.save'), class:"btn btn-xg btn-success"%>
    <%= link_to ativo_pge_users_path do %>
      <button class="btn btn-danger" type="button"><%= t('button.cancel') %></button>
    <% end %>
  </div>
<% end %>
