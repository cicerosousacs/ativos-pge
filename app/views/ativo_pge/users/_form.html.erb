<% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: [ :ativo_pge, @user ], local: true ) do |form| %>
  <div class="form-group">
    <%= form.label :name %> <br>
    <%= form.text_field :name, class:"form-control border-6 small" %>
  </div>
  <div class="form-group">
    <%= form.label :email %> <br>
    <%= form.text_field :email, class:"form-control border-6 small" %>
  </div>
  <div class="text-right">
    <%= form.submit "Salvar", class:"btn btn-xg btn-primary"%>
    <button class="btn btn-xg btn-danger" data-dismiss="modal">Cancelar</button>
  </div>
<% end %>
