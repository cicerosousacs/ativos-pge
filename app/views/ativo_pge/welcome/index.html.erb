<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">ATIVOS</div>
              <div class="h4 mb-0 font-weight-bold"><%= @total_ativos %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">ATIVOS NO DEPÓSITO</div>
              <div class="row no-gutters align-items-center">
                <div class="col-auto">
                  <div class="h4 mb-0 mr-3 font-weight-bold"><%= @ativos_available %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">VÍNCULOS</div>
              <div class="h4 mb-0 font-weight-bold"><%= @total_bonds %></div> 
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">VÍNCULOS SEM USUÁRIO</div>
                        <div class="h4 mb-0 font-weight-bold"><%= @ativos_linked %></div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="card shadow mb-4">
      <a href="#vinculos" class="d-block card-header py-3" data-toggle="collapse"
        role="button" aria-expanded="true" aria-controls="vinculos">
        <h6 class="m-0 font-weight-bold text-success">ÚLTIMAS MOVIMENTAÇÕES</h6>
      </a>
      <div class="collapse show" id="vinculos">
        <div class="card-body">
          <% @bonds.each do |bond| %>
            <div class="mb-2">
              <%= bond.bond_description %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card shadow mb-4">
      <a href="#ativos" class="d-block card-header py-3" data-toggle="collapse"
        role="button" aria-expanded="true" aria-controls="ativos">
        <h6 class="m-0 font-weight-bold text-success">ATIVOS POR TIPO</h6>
      </a>
      <div class="collapse show" id="ativos">
        <div class="card-body">
          <div class="responsive-columns">
            <% @type_count.each do |type| %>
              <div class="mb-2">
                <li style="list-style:none;">
                <%= type.join(" - ") %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
