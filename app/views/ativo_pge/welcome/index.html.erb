<div class="row">
    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">ATIVOS</div>
              <div class="h4 mb-0 font-weight-bold"><%= @total_ativos %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Earnings (Annual) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">VÍNCULOS</div>
              <div class="h4 mb-0 font-weight-bold"><%= @total_bonds %></div> 
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Tasks Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">DISPONÍVEIS</div>
              <div class="row no-gutters align-items-center">
                <div class="col-auto">
                  <div class="h4 mb-0 mr-3 font-weight-bold"><%= @ativos_available %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Pending Requests Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">VÍNCULADOS</div>
                        <div class="h4 mb-0 font-weight-bold"><%= @ativos_linked %></div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">  
  <div class="col-lg">
    <div class="card shadow mb-4">
      <!-- Card Header - Accordion -->
      <a href="#vinculos" class="d-block card-header py-3" data-toggle="collapse"
        role="button" aria-expanded="true" aria-controls="vinculos">
        <h6 class="m-0 font-weight-bold text-primary">ÚLTIMAS MOVIMENTAÇÕES</h6>
      </a>
      <!-- Card Content - Collapse -->
      <div class="collapse show" id="vinculos">
        <div class="card-body">
          <% @bonds.each do |bond| %>
            <div class="mb-2">
              <%= bond.bond_description %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="card shadow mb-4">
      <a href="#aquisicao" class="d-block card-header py-3" data-toggle="collapse"
        role="button" aria-expanded="true" aria-controls="aquisicao">
        <h6 class="m-0 font-weight-bold text-primary">Aquisições</h6>
      </a>
      <!-- Card Content - Collapse -->
      <div class="collapse show" id="aquisicao">
        <div class="card-body">
          Aqui
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="card shadow mb-4">
      <a href="#ativos" class="d-block card-header py-3" data-toggle="collapse"
        role="button" aria-expanded="true" aria-controls="ativos">
        <h6 class="m-0 font-weight-bold text-primary">ATIVOS POR TIPO</h6>
      </a>
      <!-- Card Content - Collapse -->
      <div class="collapse show" id="ativos">
        <div class="card-body">
          <code>
            <% @type_count.each do |type|%>
              <li style="list-style:none;">
                <%= type %>
              </li>
            <% end %>
          </code>
        </div>
      </div>
    </div>
  </div>

