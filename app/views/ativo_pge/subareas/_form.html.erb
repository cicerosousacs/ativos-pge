
<% if @subarea.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <ul>
            <% @subarea.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-success">Nova Subarea</h6>
  </div>
  <div class="card-body">
    <%= form_with(model: [ :ativo_pge, @subarea ], local: true ) do |form| %>
      <div class="form-group">
        <%= form.label :area_id %> <br>
        <%= form.select("area_id", @area_options, { include_blank: 'Selecione...'}, class:"form-control") %>
      </div>
      <div class="form-group">
        <%= form.label :description %> <br>
        <%= form.text_field :description, class:"form-control border-6 small" %>
      </div>
      <div class="text-right">
        <%= form.submit "Salvar", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
