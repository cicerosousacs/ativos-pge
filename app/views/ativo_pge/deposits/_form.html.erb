<% if @deposit.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <% @deposit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [ :ativo_pge, @deposit ], local: true ) do |form| %>
  <div class="form-group">
    <%= form.label :status_id %> <br>
    <%= form.select :status_id, @status, {include_blank: 'Status'}, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :observation %> <br>
    <%= form.text_area :observation, rows: 4, class:"form-control border-6 small" %>
  </div>
  <div class="text-right">
    <%= form.submit t('button.save'), class:"btn btn-success"%>
    <%= link_to ativo_pge_deposits_path do %>
      <div class="btn btn-xg btn-danger" data-dismiss="modal"><%= t('button.cancel') %></div>
    <% end %>
  </div>
<% end %>