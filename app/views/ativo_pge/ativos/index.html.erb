<h1 class="h3 mb-2 text-gray-800">Ativos</h1>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div>
      <%= link_to new_ativo_pge_ativo_path do %>
        <button class="btn btn-success" type="button">Novo Ativo</button>
      <% end %>
    </div>
    <div class="form-inline">
      <%= search_form_for @q, url: ativo_pge_ativos_path, method: :get do |f| %>
        <%= f.search_field :asset_i_cont_all, class:"form-control", placeholder:'Pesquisar...' %>
        <%= button_tag type:'submit', class:"btn btn-success" do %>
          <i class="fas fa-search fa-sm"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Tombo</th>
          <th>Descrição</th>
          <th>Serial</th>
          <th colspan="2" class="text-center">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @ativos.each do |ativo| %>
          <tr>
            <td width="10%"><%= ativo.tombo %></td>
            <td width="50%"><%= ativo.ativo_description %></td>
            <td width="50%"><%= ativo.serial %></td>
            <td style="width: 10px">
              <%= link_to edit_ativo_pge_ativo_path(ativo) do %>
                <i  title="Editar" class="blue fas fa-edit"></i>
              <% end %>
            </td>
            <td style="width: 12px">
              <%= link_to ativo_pge_ativo_path(ativo), method: :delete, data: {confirm: "#{current_admin.name}, você tem certeza que deseja remover: #{ativo.ativo_description}?"} do %>
                <i  title="Excluir" class="red fa fa-trash"></i>
              <% end %>  
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-black-50 text-sm">Total de ativos: <%= @total_ativos %></div>
    <%= paginate @ativos %>
  </div>
</div>
