<h1 class="h3 mb-2 text-gray-800"><%= t('views.bond.title', model: @acquisitions.model_name.human(count: 2)) %></h1>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">
      <%= link_to new_ativo_pge_acquisition_path do %>
        <button class="btn btn-success" style="color:write"><%= t('button.new_a', model: @acquisitions.model_name.human) %></button>
      <% end %> 
    </h6>
  </div>
  <div class="card-body">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th width="10%"><%= translate_attribute(@acquisitions, :contract_number) %></th>
          <th width="50%"><%= translate_attribute(@acquisitions, :item) %></th>
          <th width="12%"><%= translate_attribute(@acquisitions, :quantity) %></th>
          <th width="30%"><%= translate_attribute(@acquisitions, :manager) %></th>
          <th colspan="3" class="text-center"><%= t('action.shares') %></th>
        </tr>
      </thead>
      <tbody>
        <% @acquisitions.each do |acquisition| %>
          <tr>
            <td width="10%"><%= acquisition.contract_number %></td>
            <td width="40%"><%= acquisition.item %></td>
            <td width="10%"><%= acquisition.quantity %></td>
            <td width="30%"><%= acquisition.manager %></td>
            <td style="width: 12px">
              <%= link_to ativo_pge_acquisition_path(acquisition) do %>
                <i title="Visualizar" class="gray fa fa-eye"></i>
              <% end %>
            <td style="width: 12px">
              <%= link_to edit_ativo_pge_acquisition_path(acquisition) do %>
                <i title=<%= t('button.edit') %> class="blue fa fa-edit"></i>
              <% end %>
            <td style="width: 12px">
              <%= link_to ativo_pge_acquisition_path(acquisition), method: :delete, data: {confirm: t('message.confirm', name: current_admin.name, item: acquisition.item) } do %>
                <i title=<%= t('button.delete') %> class="red fa fa-trash"></i>
              <% end %>  
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
