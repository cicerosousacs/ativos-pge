<h1 class="h3 mb-2 text-gray-800">Administradores</h1>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <%= link_to new_ativo_pge_admin_path, remote: true, data: { target: '#form_modal', toggle: 'modal' } do %>
      <button class="btn btn-success" type="button">Novo Administrador</button>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Perfil</th>
            <th>Status</th>
            <th colspan="2" class="text-center">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td width="40%"><%= admin.name %></td>
              <td width="40%"><%= admin.email %></td>
              <td width="10%"><%= admin.profile %></td>
              <td width="10%"><%= admin.check_active %></td>
              <td style="width: 12px">
                <%= link_to edit_ativo_pge_admin_path(admin), remote: true, data: { target: '#form_modal', toggle: 'modal' } do %>
                  <i  title="Editar" class="fa fa-edit"></i>
                <% end %>
              <td style="width: 12px">
                <% confirm_message = admin.active.present? ? "inativar" : "ativar" %>
                <%= link_to ativo_pge_admin_path(admin), method: :delete, data: { confirm: "Você tem certeza que deseja #{confirm_message}:  #{admin.name}?"} do %>
                  <% if admin.active.present? %>
                    <i  title="Inativado" class="fa fa-user-xmark inactive"></i>
                  <% else %>
                    <i  title="Ativado" class="fa fa-user-check active"></i>
                  <% end %>
                <% end %>  
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
