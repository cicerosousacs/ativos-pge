<h1 class="h3 mb-2 text-gray-800"><%= t('views.bond.title', model: @admins.model_name.human(count: 2)) %></h1>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <%= link_to new_ativo_pge_admin_path, remote: true, data: { target: '#form_modal', toggle: 'modal' } do %>
      <button class="btn btn-success" type="button"><%= t('button.new', model: @admins.model_name.human) %></button>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th><%= translate_attribute(@admins, :name) %></th>
            <th><%= translate_attribute(@admins, :email) %></th>
            <th><%= translate_attribute(@admins, :profile) %></th>
            <th><%= translate_attribute(@admins, :active) %></th>
            <th colspan="2" class="text-center"><%= t('action.shares') %></th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td width="40%"><%= admin.name %></td>
              <td width="40%"><%= admin.email %></td>
              <td width="10%"><%= admin.profile %></td>
              <td width="10%"><%= admin.check_active %></td>
              <td style="width: 12px">
                <%= link_to edit_ativo_pge_admin_path(admin), remote: true, data: { target: '#form_modal', toggle: 'modal' } do %>
                  <i  title="Editar" class="fa fa-edit"></i>
                <% end %>
              <td style="width: 12px">
                <%= link_to ativo_pge_admin_path(admin), method: :delete, data: { confirm: t('message.confirm_admin', name: admin.name, item: inactivate_activate(admin) ) } do %>
                  <% if admin.active.present? %>
                    <i  title=<%= t('subtitle.activated') %> class="fa fa-user-xmark inactive"></i>
                  <% else %>
                    <i  title=<%= t('subtitle.inactivated') %> class="fa fa-user-check active"></i>
                  <% end %>
                <% end %>  
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
