<div class="card shadow mb-4">
  <div class="card-header py-3">
    <%= link_to new_ativo_pge_bond_path do %>
      <button class="btn btn-success" style="color:write">Novo Vinculo</button>
    <% end %> 
  </div>
  <div class="card-body">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Área</th>
          <th>Subárea</th>
          <th>Usuário</th>
          <th>Observação</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @bonds.each do |bond| %>
          <tr data-toggle="collapse" data-target="#lista_ativos<%=bond.id%>">
            <td><%= bond.subarea.area.description %></td>
            <td><%= bond.subarea.description %></td>
            <td><%= bond.user.name %></td>
            <td><%= bond.note %></td>
            <td style="width: 12px">
              <%= link_to "edit_ativo_pge_bond_path(bond)" do %>
                <i class="fa fa-eye"></i>
              <% end %>
            <td style="width: 12px">
              <%= link_to edit_ativo_pge_bond_path(bond) do %>
                <i class="fa fa-edit"></i>
              <% end %>
            <td style="width: 12px">
              <%= link_to ativo_pge_bond_path(bond), method: :delete, data: {confirm: "Certeza?"} do %>
                <i class="fa fa-trash"></i>
              <% end %>  
            </td>
          </tr>
          <% bond.attach_ativo.each do |show_ativo| %>
            <tr id="lista_ativos<%=bond.id%>" class="collapse">
              <td class="table-light" colspan="6">
                <%= show_ativo.ativo.tombo %> -
                <%= show_ativo.ativo.ativo_description %> - 
                <%= show_ativo.status %> - 
                <%= show_ativo.note %>
              </td>  
            </tr>
          <% end %>
          <!-- Modal -->
<div class="modal fade" id="staticBackdrop" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Ativos vinculados</h5>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">
  Launch static backdrop modal
</button>

