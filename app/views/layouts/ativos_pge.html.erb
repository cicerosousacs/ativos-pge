<!DOCTYPE html>
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Portal Service Desk</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'ativos' %>


</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-success sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center">
              <%= image_tag "service_desk_br2.png", size: "200x40" %>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
              <%= link_to ativo_pge_welcome_index_path do %>
                <i class="nav-link fas fa-fw fa-tachometer-alt">
                  <span style="font-family:Verdana;">Dashboard</span>
                </i>
              <% end %>     
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Nav Item - Charts -->
            <li class="nav-item active">
              <%= link_to ativo_pge_bonds_path do %>
                <i class="nav-link fas fa-fw fa-sitemap">
                  <span style="font-family:Tahoma;">Vinculos</span></i>
                <% end %>
            </li>           
            <!-- Divider -->

            <!-- Nav Item - Pages Collapse Menu -->
            
            <li class="nav-item active">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseAtivos"
                    aria-expanded="true" aria-controls="collapseAtivos">
                    <i class="fas fa-fw fa-desktop"></i>
                    <span style="font-family:Tahoma;">Ativos</span>
                </a>
                <div id="collapseAtivos" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                      <%= link_to ativo_pge_ativos_path do %>
                        <i class="collapse-item ">Ativos</i>
                      <% end %>
                      <%= link_to ativo_pge_acquisitions_path do %>
                        <i class="collapse-item">Aquisição</i>
                      <% end %>
                    </div>
                </div>
            </li>

            <li class="nav-item active">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                    aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-fw fa-file"></i>
                    <span style="font-family:Tahoma;">Relatorios</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="#">Buttons</a>
                        <a class="collapse-item" href="#">Cards</a>
                    </div>
                </div>
            </li>

            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item active">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
                    aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span style="font-family:Tahoma;">Outros</span>
                </a>
                <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                    data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                      <%= link_to ativo_pge_areas_path do %>
                        <i class="collapse-item">Áreas</i>
                      <% end %>
                      <%= link_to ativo_pge_subareas_path do %>
                        <i class="collapse-item">Subareas</i>
                      <% end %>
                      <%= link_to ativo_pge_users_path do %>
                        <i class="collapse-item">Usuários</i>
                      <% end %>
                    </div>
                </div>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                <!-- Topbar -->
                    <form class="form-inline">
                      <div class="input-group">
                        <div class="input-group-append">
                          <div class="mx-2 text-gray-600"></div>
                        </div>
                      </div>
                    </form>
                
                    <ul class="navbar-nav ml-auto">
                      <div class="topbar-divider d-none d-sm-block"></div>
                      <!-- Nav Item - User Information -->
                      <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" id="userDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="d-lg-inline text-gray-900"><%= current_admin.name %></span>
                        </a>
                          <!-- Dropdown - User Information -->
                        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                          <%= link_to ativo_pge_admins_path do %>
                            <div class="dropdown-item">
                              <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-800"></i>
                              Gerenciar
                            </div>
                          <% end %>
                          <%= link_to ativo_pge_other_index_path do %>
                            <div class="dropdown-item">
                              <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-800"></i>
                              Outros
                            </div>
                          <% end %>
                          <div class="dropdown-divider"></div>
                          <%= link_to destroy_admin_session_path, method: :delete do %>
                            <div class="dropdown-item">
                              <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-800"></i> 
                              Sair 
                            </div>
                          <% end %>
                        </div>
                      </li>
                    </ul>
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                        <%= yield %>
                        
                </div>


            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>2022 PORTAL DO SERVICE DESK - V 1.0.0</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Modal -->
    <div class="modal fade" id="bondmodal" tabindex="-1" aria-labelledby="bondmodalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">

          </div>
        </div>
      </div>
    </div>

    <%= javascript_include_tag 'application'%>
    <%= javascript_include_tag 'ativos'%>
    

    <% if notice %>
      <%= javascript_tag do %>
        $.bootstrapGrowl('<%= notice %>', {
        type: 'success', 
        align: 'right',
        width: 550,
        delay: 3000, 
        allow_dismiss: true, 
        stackup_spacing: 10 
        });
      <% end %>
    <% end %>


  </body>

</html>
